<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>

    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js"></script>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}

    <style>
        #app {
            min-height: 100vh;
        }

        #sidebar {
            background-color: #0a0a0a;
            height: 100vh;
        }
    </style>
</head>
<body>
<div id="app" class="container-fluid">
    <div class="row">
        <div id="sidebar" class="col-2 text-light">
            <div class="row mt-3">
                <div class="h1">
                    <i class="fas fa-map"></i> Menu
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12 nav-item">
                    <div class="row">
                        <div class="col-2">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="col-10">
                            <a href="{{ path("user_index") }}" class="text-decoration-none text-light">Users</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 nav-item">
                    <div class="row">
                        <div class="col-2">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="col-10">
                            <a href="{{ path("point_index") }}" class="text-decoration-none text-light">Points</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 nav-item">
                    <div class="row">
                        <div class="col-2">
                            <i class="fas fa-address-book"></i>
                        </div>
                        <div class="col-10">
                            <a href="{{ path("customer_index") }}" class="text-decoration-none text-light">Customers</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 nav-item">
                    <div class="row">
                        <div class="col-2">
                            <i class="fas fa-suitcase"></i>
                        </div>
                        <div class="col-10">
                            <a href="{{ path("voucher_index") }}" class="text-decoration-none text-light">Vouchers</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 nav-item">
                    <div class="row">
                        <div class="col-2">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <div class="col-10">
                            <a href="{{ path("order_index") }}" class="text-decoration-none text-light">Orders</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="content" class="col-10">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>

</body>
</html>
